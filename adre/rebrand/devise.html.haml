!!! 5
%html{ lang: "en"}
  = render "layouts/head"
  %body.ui_basic.login-page
    .container
      .content
        .login-title
          %h1= sabah.io runs GitLab
    %hr
    .container
      .content
        = render "layouts/flash"
        .row
          .col-md-7.brand-holder
            - if brand_item
              .brand-image
                = brand_image
              .brand_text
                = brand_text
            - else
              .brand-image.default-brand-image.hidden-sm.hidden-xs
                = image_tag 'brand_logo.png'
              .brand_text.hidden-xs
                %h2 GitLab: Open-source software for code collaboration!

                %p.lead
                  Manage git repositories with fine grained access controls that keep your code secure.
                  Perform code reviews and enhance collaboration with merge requests.
                  Each project can also have an issue tracker and a wiki.

          .col-md-5
            = yield
    %hr
    .container
      .footer-links
        = link_to "Explore", explore_root_path
        = link_to "Documentation", "http://doc.gitlab.com/"
        = link_to "About GitLab", "https://about.gitlab.com/"